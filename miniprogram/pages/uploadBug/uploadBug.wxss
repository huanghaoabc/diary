page {
  width: 100%;
  height: 100%;
  border-bottom: 2rpx solid rgb(252, 252, 252);
}

.page {
  width: 100%;
  height: 100%;
}

textarea {
  width: 100%;
  height: 500rpx;
  /* border-bottom: 2rpx solid rgb(252, 252, 252); */
  box-shadow:0 0 8rpx rgb(210,210,210);
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 20rpx;
  position: relative;
}

textarea view {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  font-size: 26rpx;
  color: rgb(221,221,221);
}

button {
  position: absolute;
  bottom: 20rpx;
  left: 2%;
  width: 96%;
  right: 2%;
  background-color: #87CEFA;
  color: white;
}

